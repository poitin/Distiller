mMult isZ g h m1 m2 = 
    case m1 of 
         Error -> Error
         | None -> None
         | Val (v1) -> 
             (case m2 of
                  Error -> Error 
                  | None -> None
                  | Val (v) -> (mkNode isZ (h v1 v))
                  | Node (t1, t2, t3, t4) -> Error)
         | Node (q1, q2, q3, q4) -> 
              (case m2 of 
                   Error -> Error
                   | None -> None 
                   | Val (v) -> Error
                   | Node (t1, t2, t3, t4) -> (combine (mAdd isZ g) (mMult isZ g h) q1 q2 q3 q4 t1 t2 t3 t4))
;

map isZ f m = 
    case m of
         Error -> Error
         | None -> None
         | Val (v) -> (mkNode isZ (f s))
         | Node (q1, q2, q3, q4) -> (reduceTree 
                                     (map isZ f q1) 
                                     (map isZ f q2) 
                                     (map isZ f q3) 
                                     (map isZ f q4));
                      
kron isZ g m1 m2 =
    case m1 of 
         Error -> Error
         | None -> None
         | Val (v) -> (map isZ (g v) m2)
         | Node (q1, q2, q3, q4) -> (reduceTree 
                                      (kron isZ g q1 m2) 
                                      (kron isZ g q2 m2) 
                                      (kron isZ g q3 m2) 
                                      (kron isZ g q4 m2))

