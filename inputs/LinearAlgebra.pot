mkNode isZ x = case (isZ x) of True -> None | False -> Val(x); 

reduceTree n1 n2 n3 n4 = Node (n1, n2, n3, n4);

reduceTree2 n1 n2 n3 n4 =
    let nd = Node (n1, n2, n3, n4) in
    (case n1 of 
         None -> (case n2 of 
                       None -> (case n3 of 
                                     None -> (case n4 of 
                                                   None -> None
                                                   | Error -> Error
                                                   | Val (v4) -> nd
                                                   | Node (m1, m2, m3, m4) -> nd)
                                     | Error -> Error
                                     | Val (v3) -> nd
                                     | Node (l1, l2, l3, l4) -> nd)
                       | Error -> Error
                       | Val (v2) -> nd
                       | Node (k1, k2, k3, k4) -> nd)
         | Error -> Error
         | Val (v1) -> nd
         | Node (j1, j2, j3, j4) -> nd)

