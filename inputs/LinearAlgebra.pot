complimentary m =
    let res = 
        case m of 
          MNode (m1, m2, m3, m4) -> MNode (complimentary m1, complimentary m2, complimentary m3, complimentary m4)
        | MNone -> MVal
        | MVal -> MNone
    in reduceMask res

